<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        <RelativeLayout
            android:id="@+id/relativeVenue"
            android:layout_width="match_parent"
            android:layout_height="80dp"

            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ImgVenueImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                />

            <TextView
                android:id="@+id/tvVenueName"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/ImgVenueImage"
                android:layout_toRightOf="@+id/ImgVenueImage"
                android:paddingLeft="10dp"
                android:text="Name"
                android:textSize="17dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tvVenueDetail"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tvVenueName"
                android:layout_toEndOf="@+id/ImgVenueImage"
                android:layout_toRightOf="@+id/ImgVenueImage"
                android:paddingLeft="10dp"
                android:text="detail" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="#E3E4E3"
            android:layout_below="@+id/relativeVenue"
            android:layout_marginLeft="75dp"
            android:orientation="horizontal">
        </LinearLayout>
</RelativeLayout>
