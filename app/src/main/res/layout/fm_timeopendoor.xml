<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C0C0C0"
    android:orientation="vertical">

    <include
        android:id="@+id/tile_time_open"
        layout="@layout/layout_title_firstsetup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <include
        android:id="@+id/day1"
        layout="@layout/layout_time_open"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <include
        android:id="@+id/day2"
        layout="@layout/layout_time_open"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <include
        android:id="@+id/day3"
        layout="@layout/layout_time_open"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <include
        android:id="@+id/day4"
        layout="@layout/layout_time_open"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <include
        android:id="@+id/day5"
        layout="@layout/layout_time_open"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <include
        android:id="@+id/day6"
        layout="@layout/layout_time_open"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <include
        android:id="@+id/day7"
        layout="@layout/layout_time_open"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#00366D"/>


    <include
        android:id="@+id/button_next_back"
        android:layout_marginTop="15dp"
        layout="@layout/layout_backnext_button"
        android:layout_width="match_parent"
        android:layout_height="100dp" />


</LinearLayout>