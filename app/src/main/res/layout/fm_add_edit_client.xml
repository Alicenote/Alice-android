<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    >


    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Appbar"
        android:fillViewport="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/tvClientInfomation"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:gravity="center|left"
                android:paddingLeft="32dp"
                android:text="Client Information"
                android:textColor="#000000"
                android:textStyle="bold|italic" />

            <LinearLayout
                android:id="@+id/lineClientInfomation"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tvClientInfomation"

                android:layout_marginLeft="10dp"
                android:background="#e5e5e5"
                android:orientation="horizontal"></LinearLayout>>

            <LinearLayout
                android:id="@+id/linearLayoutFirstName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/lineClientInfomation"

                android:orientation="horizontal"
                android:weightSum="10">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"

                    android:layout_weight="4.5"
                    app:srcCompat="@android:drawable/ic_menu_edit" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3.5"
                    android:gravity="center"
                    android:text="First Name"
                    android:textColor="#000000"

                    android:textSize="18sp"

                    />

                <EditText
                    android:id="@+id/edFistName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingLeft="5dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lineFirstName"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/linearLayoutFirstName"
                android:layout_marginLeft="10dp"
                android:background="#e5e5e5"

                android:orientation="horizontal"></LinearLayout>>

            <LinearLayout
                android:id="@+id/linearLayoutLastName"

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/lineFirstName"

                android:orientation="horizontal"
                android:weightSum="10">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"

                    android:layout_weight="4.5"
                    app:srcCompat="@android:drawable/ic_menu_edit" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3.5"
                    android:gravity="center"
                    android:text="Last Name"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/edLastName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingLeft="5dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lineLastName"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/linearLayoutLastName"
                android:layout_marginLeft="10dp"
                android:background="#e5e5e5"

                android:orientation="horizontal"></LinearLayout>>

            <LinearLayout
                android:id="@+id/linearLayoutBirthday"

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/lineLastName"

                android:orientation="horizontal"
                android:weightSum="10">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"

                    android:layout_weight="4.5"
                    app:srcCompat="@android:drawable/ic_menu_edit" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3.5"
                    android:gravity="center"
                    android:text="Birth day"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvBirthday"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:hint="YYYY/MM/DD"
                    android:gravity="center"
                    android:paddingLeft="5dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lineBirthday"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/linearLayoutBirthday"
                android:layout_marginLeft="10dp"
                android:background="#e5e5e5"

                android:orientation="horizontal"></LinearLayout>>

            <LinearLayout
                android:id="@+id/linearLayoutGender"

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/lineBirthday"

                android:orientation="horizontal"
                android:weightSum="10">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"

                    android:layout_weight="4.5"
                    app:srcCompat="@android:drawable/ic_menu_edit" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:gravity="center"
                    android:text="Gender"
                    android:paddingRight="60dp"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/spinner_edGender"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:paddingLeft="5dp"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/lineGender"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/linearLayoutGender"
                android:layout_marginLeft="10dp"
                android:background="#e5e5e5"

                android:orientation="horizontal"></LinearLayout>>

            <TextView
                android:id="@+id/tvClientContact"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/lineGender"
                android:layout_marginTop="40dp"
                android:gravity="center|left"
                android:paddingLeft="32dp"
                android:text="Client Contact"
                android:textColor="#000000"
                android:textStyle="bold|italic" />

            <LinearLayout
                android:id="@+id/lineClientContact"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tvClientContact"
                android:layout_marginLeft="10dp"
                android:background="#e5e5e5"

                android:orientation="horizontal"></LinearLayout>>

            <LinearLayout
                android:id="@+id/linearLayoutEmail"

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/lineClientContact"

                android:orientation="horizontal"
                android:weightSum="10">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"

                    android:layout_weight="4.5"
                    app:srcCompat="@android:drawable/ic_menu_edit" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3.5"
                    android:gravity="center"
                    android:text="E-Mail"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/edEmail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingLeft="5dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lineEmail"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/linearLayoutEmail"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/mErrorEmail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:gravity="center"
                    android:background="#e5e5e5"
                    android:textColor="#000000"
                    android:textSize="18sp"

                    />

            </LinearLayout>>

            <LinearLayout
                android:id="@+id/linearLayoutMobilePhone"

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/lineEmail"

                android:orientation="horizontal"
                android:weightSum="10">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"

                    android:layout_weight="4.5"
                    app:srcCompat="@android:drawable/ic_menu_edit" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3.3"
                    android:gravity="center"
                    android:text="Mobile Phone"
                    android:textColor="#000000"
                    android:textSize="18sp"

                    />

                <EditText
                    android:id="@+id/edMobilePhone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2.2"
                    android:ems="10"
                    android:inputType="number"
                    android:paddingLeft="5dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lineMoiblePhone"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/linearLayoutMobilePhone"
                android:layout_marginLeft="10dp"
                android:background="#e5e5e5"

                android:orientation="horizontal"></LinearLayout>>



            <LinearLayout
                android:id="@+id/linearLayoutStreetAdress"

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/lineMoiblePhone"

                android:orientation="horizontal"
                android:weightSum="10">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"

                    android:layout_weight="4.5"
                    app:srcCompat="@android:drawable/ic_menu_edit" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_weight="3.3"
                    android:gravity="center"

                    android:text="Address"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/edAddress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2.2"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:paddingLeft="5dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lineAddress"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/linearLayoutStreetAdress"
                android:layout_marginLeft="10dp"
                android:background="#e5e5e5"

                android:orientation="horizontal"></LinearLayout>>


            <TextView
                android:id="@+id/tvOther"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/lineAddress"
                android:layout_marginTop="40dp"
                android:gravity="center|left"
                android:paddingLeft="32dp"
                android:text="Other"
                android:textColor="#000000"
                android:textStyle="bold|italic" />

            <LinearLayout
                android:id="@+id/lineOther"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tvOther"

                android:layout_marginLeft="10dp"
                android:background="#e5e5e5"
                android:orientation="horizontal"></LinearLayout>>

            <LinearLayout
                android:id="@+id/linearComment"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/lineOther"

                android:orientation="horizontal"
                android:weightSum="10">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"

                    android:layout_weight="8"
                    app:srcCompat="@android:drawable/ic_menu_edit" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="Comment/Description"


                    android:textColor="#000000"
                    android:textSize="18sp" />


            </LinearLayout>

            <LinearLayout

                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linearComment"
                android:layout_margin="15dp"
                android:background="#e5e5e5"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edComment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:background="#FFFFFF"
                    android:ems="10"
                    android:gravity="top|left"
                    android:lines="10"
                    android:maxLines="15"
                    android:minLines="5"
                    android:paddingLeft="5dp" />
            </LinearLayout>


            <Button
                android:id="@+id/btnDel"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/linearLayout"
                android:text="Delete" />

        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>
    >


</RelativeLayout>
