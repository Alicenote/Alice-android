<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="#5fff"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:layout_weight="1"
        android:background="@drawable/xml_popup_bg_white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/title_top_employee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/xml_popup_bg_pink"
            android:paddingBottom="15dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/trophy" />

            <TextView
                android:id="@+id/textview_employee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:gravity="right"
                android:text="EMPLOYEE"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textview_top_ranking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview_employee"
                android:layout_marginRight="40dp"
                android:gravity="right"
                android:text="TOP RANKING"
                android:textColor="#fff"
                android:textSize="10sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <TextView
            android:id="@+id/title_top_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:text="Services Ranking"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="80dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="30dp"
            android:overScrollMode="never" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/cancel_button"
            style="@style/CircleButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/white_circle_button"
            android:paddingBottom="7dp"
            android:text="x"
            android:textColor="@color/white"
            android:textSize="22sp" />


    </LinearLayout>


</LinearLayout>