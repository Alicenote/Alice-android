<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="#F20082" />
            <padding android:bottom="2dp" android:left="15dp" android:right="15dp" android:top="2dp" />
            <gradient android:centerColor="@android:color/transparent" android:endColor="@android:color/transparent" android:startColor="@android:color/transparent" />
            <corners android:radius="2dp"/>
        </shape>
    </item>
</selector>